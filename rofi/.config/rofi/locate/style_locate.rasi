configuration {
    font:                           "Jetbrains Mono Nerd Font 10";
    show-icons:                     true;
	icon-theme: 		            "Papirus";
    display-drun: 		            "ï€‚";
    drun-display-format:            "{name}";
    disable-history:                false;
    fullscreen:                     false;
	hide-scrollbar: 	            true;
	sidebar-mode: 		            false;
}

@import "themes/NightParrot.rasi"

/* this solves the issue with rofi 1.7.0 */
element-text, element-icon {
        background-color: transparent;
        text-color: inherit;
}

window {
    transparency:                   "real";
    background-color:               @bg;
    text-color:                     @fg;
	border:			                0px;
	border-color:		            @ac;
    border-radius:                  5px;
	width:			                50%;
    location:                       center;
    x-offset:                       0;
    y-offset:                       0;
}

prompt {
    enabled: 						true;
	padding: 					    0.08% 1% 0% -0.5%;
	background-color: 				@ac;
	text-color: 					@se;
	font:						    "Jetbrains Mono Nerd Font 12";
}

entry {
    background-color:               @ac;
    text-color:                     @fg;
    placeholder-color:              @se;
    expand:                         true;
    horizontal-align:               0;
    placeholder:                    "Locate file or folder";
    padding:                        0.10% 0% 0% 0%;
    blink:                          true;
}

inputbar {
    children:                       [ prompt, entry ];
    background-color:               @ac;
    text-color:                     @fg;
    expand:                         false;
	border:			                8px;
    border-radius:                  7px;
	border-color:		            @bg;
    margin:                         0% 0% 0% 0%;
    padding:                        1.5%;
}

listview {
    background-color:               @al;
    padding:                        10px;
    columns:                        1;
    lines:                          10;
    spacing:                        0%;
    cycle:                          false;
    dynamic:                        true;
    layout:                         vertical;
}

mainbox {
    background-color:               @bg;
	border:			                0% 0% 0% 0%;
    border-radius:                  5px;
	border-color:		            @bg;
    children:                       [ inputbar, listview ];
    spacing:                        0%;
    padding:                        0%;
}

element {
    background-color:               @bg;
    text-color:                     @fg;
    orientation:                    horizontal;
    border-radius:                  0%;
    padding:                        0.5% 0.5% 1% 0.5%;
}

element-icon {
    size:                           22px;
    border:                         0px;
}

element-text {
    expand:                         true;
    horizontal-align:               0;
    vertical-align:                 0.5;
    margin:                         0% 0.25% 0% 0.25%;
}

element selected {
    background-color:               @se;
    text-color:                     @fg;
	border:			                0% 0% 0.5% 0%;
    border-radius:                  2px;
    border-color:                   @bg;
}
