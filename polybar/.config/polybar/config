[colors]
black = #22253d 
red = #ff4a69 
green = #50fa7b
yellow = #fff980
blue = #7881ff
magenta = #ff69cd
cyan = #30d3f0
lightcyan = #8be9fd
white = #ffffff
orange = #ffbe6c
lime = #a4ff73
purple = #b778ff
gray = #c3c7e0

transparent = #00

background = #0a0a17
foreground = #383d63
foreground-alt = #22253d
back_clear = #14162b

;########################################################################
;#                             B A R                                    #
;########################################################################

[bar/laptop]
monitor = eDP-1
border-size = 7
border-color = ${colors.transparent}
height = 32
dpi = 125

background = ${colors.transparent}
foreground = ${colors.foreground}

; Give transparent space around the bar
width=99.7%
offset-x = 3px
offset-y = 0.3%
#offset-y = 0.7%

; Aesthetic adjustments
line-size = 1
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0
;separator = %{F#44475a}|%{F-}

; Fonts
font-0 = JetBrains Mono:style=bold:pixelsize=9.5;4
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = Font Awesome 5 Free Solid:size=10;4
font-3 = JetBrains Mono Nerd Font:style=bold:pixelsize=15;4
font-4 = JetBrains Mono Nerd Font:style=bold:pixelsize=12;4

; Modules
modules-left = bspwm empty-small round-left spotify round-right empty-small xwindow
modules-center = 
modules-right = round-left cpu empty-color memory round-right empty temperature empty pulseaudio empty battery empty round-left date round-right empty-small

; Tray
tray-position = right
tray-padding = 0
tray-maxsize = 22

; Hide on full screen
wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize

;########################################################################
;#                             B A R                                    #
;########################################################################

[bar/desktop]
monitor = HDMI-1
border-size = 7
border-color = ${colors.transparent}
height = 22

background = ${colors.transparent}
foreground = ${colors.foreground}

width=99.7%
offset-x = 3px
offset-y = 0.3%

; Aesthetic adjustments
line-size = 1
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0
;separator = %{F#44475a}|%{F-}

; Fonts
font-0 = JetBrains Mono:style=bold:pixelsize=9.5;3
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = Font Awesome 5 Free Solid:size=10;2
font-3 = JetBrains Mono Nerd Font:style=bold:pixelsize=15;4
font-4 = JetBrains Mono Nerd Font:style=bold:pixelsize=12;3

; Modules
modules-left = bspwm empty-small round-left spotify round-right empty-small xwindow
modules-center = 
modules-right = round-left cpu empty-color memory round-right empty temperature empty pulseaudio empty battery empty round-left date round-right empty-small

; Tray
tray-position = right
tray-padding = 0


; Hide on full screen
wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize

